<% if (messages && messages.notice) { %>
    <div class="notice">
        <%= messages.notice %>
    </div>
    <% } %>

        <% if (errors) { %>
            <ul class="notice">
                <% errors.array().forEach(error=> { %>
                    <li>
                        <%= error.msg %>
                    </li>
                    <% }) %>
            </ul>
            <% } %>

                <div class="inventory-container">
                    <h1>Add New Classification</h1>

                    <form method="post" action="/inv/add-classification">
                        <label for="classification_name">
                            Classification Name
                            <span>(No spaces or special characters)</span>
                        </label>

                        <input type="text" id="classification_name" name="classification_name" pattern="^[A-Za-z0-9]+$"
                            required>

                        <button type="submit">Add Classification</button>
                    </form>
                </div>